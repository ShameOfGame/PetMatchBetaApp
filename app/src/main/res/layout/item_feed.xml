<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profilbild und Titel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/feed_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile"
                android:contentDescription="@string/profile_image"
                app:civ_border_color="@color/purple_500" />

            <TextView
                android:id="@+id/tvFeedTitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beitrag Titel"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Inhalt des Beitrags -->
        <TextView
            android:id="@+id/tvFeedInhalt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beitrag Inhalt"
            android:layout_marginTop="8dp" />

        <!-- Button "Kommentieren" -->
        <Button
            android:id="@+id/btnKontaktieren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kommentieren"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
